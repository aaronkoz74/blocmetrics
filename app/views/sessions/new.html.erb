<h2>Log in</h2>

<div class="form-horizontal">
  <div class="col-md-8">
    <%= form_for :session, url: login_path do |f|  %>
      <div class="form-group">
        <%= f.label :email %>
        <%= f.email_field :email, autofocus: true, class: 'form-control', placeholder: "Enter email" %></br>
        <%= f.label :password %>
        <%= f.password_field :password, class: 'form-control', placeholder: "Enter password" %></br>
        <p><%= link_to "Forgot password?", new_password_reset_path %></p>
        <%= f.label :remember_me, class: 'checkbox' do %>
          Remember Me <%= f.check_box :remember_me, :style => "margin-left: 10px;"  %></br>
        <% end %>
        <%= f.submit "Log in", class: 'btn btn-success' %>
      </div>
    <% end %>
  </div>
</div>
